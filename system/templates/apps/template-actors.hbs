{{#*inline "centerPartial"}}
    <div class="fatex-js-template-header-button fatex-js-create-template fatex-template-action">
        <span class="fatex-template-action__label">{{localize "FAx.Settings.Templates.App.CreateNew"}}</span>
        <i class="fas fa-plus fatex-template-action__icon"></i>
    </div>
{{/inline}}

{{> "systems/fatex/templates/components/app-header.hbs"
    title="FAx.Settings.Templates.App.Title"
    label="FAx.Settings.Templates.App.Label"
    centerPartial="centerPartial"
}}

<div class="fatex-templates">
    {{#each templateActors as |template templateIndex|}}
        <div class="fatex-template">
            <header class="fatex-headline">
                <h3 class="fatex-headline__text">{{ template.name }}</h3>
            </header>

            <style>
                .fatex-template__image--{{template._id}} {
                    background-image: url("{{template.img}}");
                }
            </style>

            <div class="fatex-template__image fatex-template__image--{{template._id}}" title="{{template.name}}"></div>

            <div class="fatex-template__information-group">
                <span class="fatex-template__information-name">{{localize "FAx.Sheet.Aspects"}}</span>
                <span class="fatex-template__information-value">{{template.aspects.length}}</span>

                <span class="fatex-template__information-name">{{localize "FAx.Sheet.StressTracks"}}</span>
                <span class="fatex-template__information-value">{{template.stress.length}}</span>

                <span class="fatex-template__information-name">{{localize "FAx.Sheet.Skills"}}</span>
                <span class="fatex-template__information-value">{{template.skills.length}}</span>

                <span class="fatex-template__information-name">{{localize "FAx.Sheet.Consequences"}}</span>
                <span class="fatex-template__information-value">{{template.consequences.length}}</span>
            </div>

            <div class="fatex-template__actions">
                <span class="fatex-js-configure-template fatex-button fatex-button--dark" data-template="{{template._id}}">
                    <i class="fa fa-cog"></i>
                    <span>{{localize "FAx.Global.Actions.Configure"}}</span>
                </span>

                <span class="fatex-js-duplicate-template fatex-button fatex-button--dark" data-template="{{template._id}}">
                    <i class="fa fa-copy"></i>
                    <span>{{localize "FAx.Global.Actions.Duplicate"}}</span>
                </span>

                <span
                    class="fatex-js-delete-template fatex-button fatex-button--dark fatex-u-delete" 
                    data-template="{{template._id}}"
                >
                    <i class="fa fa-trash"></i>
                    <span>{{localize "FAx.Global.Actions.Delete"}}</span>
                </span>
            </div>
        </div>
    {{else}}
        <div class="fatex-template__help fatex-u-full-width">
            <p class="fatex-template__help-text">{{{localize "FAx.Settings.Templates.App.Help"}}}</p>

            {{> centerPartial }}
        </div>
    {{/each}}
</div>

{{> "systems/fatex/templates/components/app-footer.hbs"}}
